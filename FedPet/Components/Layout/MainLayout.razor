@using FedPet.Data
@inherits LayoutComponentBase
@inject NavigationManager Navigation

@Body

@code{

    // If app was opened by clicking a notification, navigate to specific pets page.
    protected override async Task OnInitializedAsync()
    {
        if (NotificationHandler.NavigateAfterNotification && NotificationHandler.NavigateAfterNotificationRoute != string.Empty)
        {
            Navigation.NavigateTo(NotificationHandler.NavigateAfterNotificationRoute);
            await Task.CompletedTask;
        }
    }
    
}